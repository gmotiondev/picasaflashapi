<?xml version="1.0" encoding="UTF-8"?>
<beans>
	<application-loader url="loader.swf" 
						name-callback="cb.onNameCallBack" 
						progress-callback="cb.onProgressCallback" 
						built-callback="cb.onBuildCallback" 
						depth="1000" />

	<dll url="loader.swf"/>
	<dll url="picasa.swf"/>	
	<dll url="dialog.swf"/>
	<dll url="mailer.swf"/>
	<dll url="grid.swf"/>
 
	<plugin id="loader" channel="c-loader" type="content.loader.loader">
		<listen channel="c-picasa"/>		
		<listen channel="c-mailer"/>
	</plugin>
	<plugin id="picasa" channel="c-picasa" type="plugins.picasa.picasa">
		<listen channel="c-grid"/>
		<method-call name="initialize">
			<argument type="Number" value="320"/><!-- imgmax -->
			<argument type="Number" value="72"/><!-- thumbsize -->
			<argument type="Number" value="24"/><!-- max_results -->
		</method-call>
	</plugin>
	<plugin id="dialog" channel="c-dialog" type="plugins.dialog.dialog">
		<listen channel="c-grid"/>		
		<listen channel="c-mailer"/>
	</plugin>
	<plugin id="mailer" channel="c-mailer" type="plugins.mailer.mailer">
		<listen channel="c-picasa"/>
	</plugin>
	<plugin id="grid" channel="c-grid" type="plugins.grid.grid">
		<listen channel="c-picasa"/>
		<listen channel="c-dialog"/>
		<method-call name="initialize">
			<argument type="String" value="c-picasa"/>
			<argument type="String" value="thisispinkfu"/>
			<argument type="String" value="5094406297232552993"/>
		</method-call>
	</plugin>
</beans>